<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget.Views.HomePage"
             BackgroundColor="#1C1C1C">
    <ScrollView Orientation="Vertical">
        <StackLayout x:Name="StackLayout_Home" Orientation="Vertical">

            <!-- Title -->
            <Label x:Name="Label_Title" Text="I tuoi movimenti" HorizontalTextAlignment="Center" TextColor="White" FontSize="30" Margin="20,10,20,10"/>

            <!-- Button show insert section -->
            <Frame CornerRadius="20" Padding="0" Margin="20,20,20,10">
                <Button x:Name="Button_InsertMovement" Text="Crea movimento" Clicked="OpenCreateMovement"/>
            </Frame>
            
            <!-- Content section -->
            <StackLayout x:Name="StackLayout_Content" Margin="25,0,25,10" Orientation="Vertical"/>

        </StackLayout>
    </ScrollView>
</ContentPage>