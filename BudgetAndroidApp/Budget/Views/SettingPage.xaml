<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget.Views.SettingPage"
             BackgroundColor="#1C1C1C">
    <ScrollView Orientation="Vertical">
        <StackLayout x:Name="StackLayout_Settings" Orientation="Vertical">

            <!-- Title -->
            <Label x:Name="Label_Title" Text="Impostazioni" HorizontalTextAlignment="Center" TextColor="White" FontSize="30" Margin="20,10,20,10"/>

            <!-- Content section -->
            <StackLayout x:Name="StackLayout_Content" Margin="25, 0, 0, 0" Orientation="Vertical"/>
            
            <!-- Developer section -->
            <Label FontSize="17" HorizontalTextAlignment="Start" Margin="25, 0, 25, 10" Text="Altro:" TextColor="Gray"/>

            <Frame CornerRadius="20" Padding="0" Margin="25, 0, 25, 0">
                <Button FontSize="17"  Text="Informazioni" TextTransform="None" Clicked="OpenAboutPage"/>
            </Frame>
            
        </StackLayout>
    </ScrollView>

</ContentPage>